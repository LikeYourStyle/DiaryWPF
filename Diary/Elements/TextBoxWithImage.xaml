<UserControl x:Class="Diary.Elements.TextBoxWithImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diary.Elements"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border Name="MailTextBoxBrush" BorderThickness="1" BorderBrush="White" Padding="5" Background="White" CornerRadius="5">
            <DockPanel>
                <Button Background="Transparent" BorderThickness="0" DockPanel.Dock="Left" HorizontalAlignment="Right" Height="28" Width="23">
                    <Image Name="TextBoxImage"/>
                </Button>
                <TextBox Name="TextBox" Margin="5 0 0 0" Width="300" Text="" FontSize="16" HorizontalAlignment="Stretch" BorderThickness="0"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
